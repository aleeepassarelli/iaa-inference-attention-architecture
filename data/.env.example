# ============================================================
# EAT-Lab Framework - Environment Variables
# ============================================================

# Model Settings
EAT_DEFAULT_MODEL=gpt2
EAT_DEVICE=cuda  # cuda, cpu, mps
EAT_CACHE_DIR=~/.cache/eat-lab

# Score(P) Configuration
EAT_BETA=0.1  # Entropy penalty weight
EAT_VERBOSE=false

# Experiment Tracking
WANDB_API_KEY=your_wandb_key_here
WANDB_PROJECT=eat-lab-experiments
MLFLOW_TRACKING_URI=http://localhost:5000

# Performance
EAT_MAX_LENGTH=512
EAT_BATCH_SIZE=8
EAT_NUM_WORKERS=4

# Development
DEBUG=false
LOG_LEVEL=INFO
