# ============================================================
# EXEMPLO 2: Visualizar Componentes
# ============================================================

import matplotlib.pyplot as plt
import numpy as np

def plot_sd_comparison(result1, result2, labels):
    """Compara dois resultados de SD visualmente"""
    
    metrics = ['semantic_density', 'mean_entropy', 'mean_dispersion', 
               'coherence', 'isotropy']
    
    values1 = [result1[m] for m in metrics]
    values2 = [result2[m] for m in metrics]
    
    x = np.arange(len(metrics))
    width = 0.35
    
    fig, ax = plt.subplots(figsize=(12, 6))
    ax.bar(x - width/2, values1, width, label=labels[0], alpha=0.8)
    ax.bar(x + width/2, values2, width, label=labels[1], alpha=0.8)
    
    ax.set_ylabel('Valor', fontsize=12)
    ax.set_title('Compara√ß√£o de M√©tricas de Densidade Sem√¢ntica', 
                 fontsize=14, fontweight='bold')
    ax.set_xticks(x)
    ax.set_xticklabels(metrics, rotation=45, ha='right')
    ax.legend()
    ax.grid(axis='y', alpha=0.3)
    
    plt.tight_layout()
    plt.show()

plot_sd_comparison(result_alto, result_baixo, 
                   ['Texto Coerente', 'Texto Disperso'])

